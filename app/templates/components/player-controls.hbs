<div class="level">
  <div class="level-left">
    <div class="level-item player__controls">
      <div class="field is-grouped">
        <p class="control">
          <button class="button is-small" {{action skip 'prev'}} disabled={{not queue.hasPrevious}}>Prev</button>
        </p>
        <p class="control">
          <button class="button is-small is-primary" {{action togglePause}}>
            {{if hifi.isPlaying 'Pause' 'Play'}}
          </button>
        </p>
        <p class="control">
          <button class="button is-small" {{action skip 'next'}} disabled={{not queue.hasNext}}>Next</button>
        </p>
      </div>
    </div>
    <div class="level-item">
      <time class="label is-small">{{format-time hifi.position}}</time>
    </div>
    <div class="level-item player__progress">
      <progress class="progress is-primary is-small" value={{progression}} max="100">{{progression}}%</progress>
    </div>
    <div class="level-item">
      <time class="label is-small">{{format-time hifi.duration}}</time>
    </div>
    <div class="level-item">
      <div class="field is-grouped player__volume">
        <div class="control">
          <input value={{hifi.volume}} 
            type="range" 
            class="input is-primary"
            max="100" step="1" 
            oninput={{action (mut hifi.volume) value="target.value"}}>
        </div>
        <div class="control">
          <button class="button is-small" {{action toggleMute}}>
            {{if hifi.isMuted 'Unmute' 'Mute'}}
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <article class="media player__track">
        <figure class="media-left">
          <img src="http://bulma.io/images/placeholders/48x48.png">
        </figure>
        <div class="media-content">
          <div class="content is-small">
            <p>
              Adoprixtoxis <br>
              <strong>{{title}}</strong>
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="level-item">
      <button class="button is-small" {{action toggleQueue}}>Queue</button>
      <div class="field is-grouped">
        <p class="control player__queue">
        </p>
      </div>
    </div>
  </div>
</div>

{{#if showQueue}}
  <div class="queue">
    <h2>Queue</h2>
    <ol>
      {{#each queue.tracks as |track index|}}
        <li>
          {{#if (eq index queue.index)}}
            <strong>
              <span>{{track.title}}</span>
            </strong>
          {{else}}
            <span>{{track.title}}</span>
          {{/if}}
        </li>
      {{/each}}
    </ol>
  </div>
{{/if}}
